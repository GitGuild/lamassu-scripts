#!/usr/bin/env bash
set -e

echo

if status dashd &>/dev/null; then
  echo "dashd is already installed."
  exit 4
fi

EMAIL_ADDRESS=$1
if [ ! $# -eq 1 ]; then
  echo "Please enter your email address."
  echo "Dash wallet backups will automatically be sent there."
  echo
  echo "lamassu-dashd-install <email_address>"
  echo
  exit 1
elif [[ ! $EMAIL_ADDRESS =~ .+@.+\..+ ]]; then
  echo "Please enter a valid email address."
  echo
  echo "lamassu-dashd-install <email_address>"
  exit 2
fi

if ! gpg --list-public-keys --with-colons $EMAIL_ADDRESS &>/dev/null; then
  echo "Before running this, please import your PGP keys."
  echo "To do this, run this command:"
  echo
  echo "  gpg --search-keys --keyserver pool.sks-keyservers.net $EMAIL_ADDRESS"
  echo
  echo "You will be presented with a list of your PGP keys,"
  echo "you should choose the one you want to use."
  echo "When you are done, run lamassu-dashd-install again."
  echo
  exit 3
fi

echo "Updating your system for Dash. Might take a few minutes."
{
apt-get update -y
apt-get upgrade -y
DEBIAN_FRONTEND=noninteractive apt-get install software-properties-common python-software-properties postfix mutt -y
} &>/dev/null

# set up postfix for emailing backups
cp /usr/share/postfix/main.cf.debian /etc/postfix/main.cf
/etc/init.d/postfix reload >/dev/null

echo "Installing dashd."

{
dd if=/dev/zero of=/swapfile bs=1M count=1024 &>/dev/null
mkswap /swapfile
swapon /swapfile
echo "/swapfile swap swap defaults 0 0" >> /etc/fstab
# TODO change to LATEST dash somehow
curl -#o dash.tar.gz https://www.dash.org/binaries/dash-0.12.0.58-linux64.tar.gz
tar -xf dash.tar.gz
cp dash/bin/* /usr/bin/
mkdir ~/.dash/

# Set up firewall
ufw allow ssh
ufw allow 3000/tcp
ufw allow 18333/tcp
echo 'y' | ufw enable
} &>/dev/null

config="/root/.dash/dash.conf"
touch $config
echo "server=1" > $config
echo "daemon=0" >> $config
echo "connections=40" >> $config
randUser=`< /dev/urandom tr -dc A-Za-z0-9 | head -c30`
randPass=`< /dev/urandom tr -dc A-Za-z0-9 | head -c30`
echo "rpcuser=$randUser" >> $config
echo "rpcpassword=$randPass" >> $config
echo "rpcport=18332" >> $config
echo "keypool=1000" >> $config
echo "prune=4000" >> $config
echo "enableinstantx=1" >> $config
echo "instantxdepth=20" >> $config


cat > "/etc/init/dashd.conf" <<EOF
description "dashd"

start on runlevel [2345]
stop on runlevel [016]

console log

respawn
respawn limit 8 4

exec start-stop-daemon --start -c root --exec /usr/bin/dashd
EOF

start dashd

echo "Waiting for dashd to load."
until dash-cli getblockcount &>/dev/null; do sleep 1; done

# Set up wallet backup cron job
echo -e "MAILTO=$EMAIL_ADDRESS\n00 05 * * * /usr/local/bin/lamassu-dashd-backup \"$EMAIL_ADDRESS\"" | \
crontab -

/usr/local/bin/lamassu-dashd-backup $EMAIL_ADDRESS

echo
echo "Installation was successful! Dash is now running."
echo
echo "It will take about 12 hours for Dash to load the entire blockchain."
echo
echo "Please check your email for your first wallet backup."
echo
echo "When your blockchain has caught up, run lamassu-dashd-enable to start"
echo "using Dash as your remote server wallet."
echo
